
<div class='data-table-container'>

<table id="example" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th style="text-align: left;">BEN</th>
      <th style="text-align: left;">First name</th>
      <!--th style="text-align: left;">Middle name(s)</th-->
      <th style="text-align: left;">Last name</th>
      <th style="text-align: center; width:120px;">Birthdate</th>
      <th style="text-align: center;">Record state</th>
      <th>&nbsp;</th>
  </tr>
  </thead>
    <%(@records || []).each do |record|%>
      <tr>
        <td style="text-align: left;"><%= '' %></td>
        <td style="text-align: left;"><%= record.first_name %></td>
        <!-- td style="text-align: left;"><%= record.middle_name %></td-->
        <td style="text-align: left;"><%= record.last_name %></td>
        <td style="text-align: center;"><%= record.birthdate.strftime('%d/%b/%Y') %></td>
        <td style="text-align: center;"><%= 'DC OPEN' %></td>
        <td>
          <table style="width: 100%; text-align: center; border-style: none;">
            <tr>
              <td><a class="btn btn-info" onmoufsedown="javascript:alert();" href="/person/<%= record.id %>?next_path=view_record">
                <%= image_tag "view.png", class: 'btn-images' %></a>
              </td>
              <td><button class="btn btn-warning" onmousedown="javascript:alert();">
                <%= image_tag "edit.png", class: 'btn-images' %></button>
               </td>
              <td><button class="btn btn-success" onmousedown="javascript:alert();">
                <%= image_tag "void.png", class: 'btn-images' %></button>
               </td>
            </tr>
          </table>
        </td>
      </tr>
    <%end%>
  <tbody>
  </tbody>
</table>

</div>

<script>

$(document).ready(function() {
    $('#example').DataTable();
} );

</script>
