<%  if SETTINGS['application_mode'] == "FC" %>



   <% if @person_details.present? && !@person_details["type_of_birth"].blank? && @person_details["type_of_birth"] != "Single" %>
     

    <%= render 'multiplebirth' %> 

   <% else %>

     <%= render 'form' %>
     
   <% end %>

<%  elsif SETTINGS['application_mode'] == "DC" %>

<% if !@person["type_of_birth"].blank? && @person["type_of_birth"] != "Single" %>

    <%= render 'multiplebirth' %> 

<% else %> 

 <% case params[:relationship].downcase 
 
		when 'normal'  %>  
			 <%= render 'dcform' %>
		<% when 'adopted'  %>  
			<%= render 'adopted' %>
		<% when 'orphaned'  %>
			<%= render 'orphaned' %>
		<% when 'abandoned' %>
		  <%= render 'abandoned' %>
		<% end %>
 
<% end %>
<%  end %>
